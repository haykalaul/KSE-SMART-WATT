# Server environment example for local development
# Copy this file to .env and fill values before running the server

# App mode: development or production
MODE=development

# Server port
PORT=8080

# PostgreSQL (used in development mode)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=kse_smart_watt

# In production the app can use a single DATABASE_URL instead. Example:
# DATABASE_URL=postgres://user:password@host:5432/dbname?sslmode=require
DATABASE_URL=

# Redis (used in production via REDIS_URL). For development default localhost is used
REDIS_URL=redis://:password@hostname:6379/0

# JWT secret for signing tokens
JWT_SECRET=replace_with_a_strong_secret

# OAuth / Frontend URLs
FRONTEND_URL=http://localhost:5173
PUBLIC_URL=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# SMTP (for sending OTP / emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=mailer@example.com
SMTP_PASSWORD=your_smtp_password

# Third-party APIs
GEMINI_API_URL=
GEMINI_API_KEY=

# Hugging Face API endpoints and token (used by Tapas/MarianMT handlers)
HUGGINGFACE_API_TAPAS_URL=https://api-inference.huggingface.co/models/google/tapas-large-finetuned-wtq
HUGGINGFACE_API_MARIANMT_URL=https://api-inference.huggingface.co/models/Helsinki-NLP/opus-mt-en-id
HUGGINGFACE_API_TOKEN=hf_your_hf_token_here
